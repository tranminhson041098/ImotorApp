<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="#FFFCCC"
    android:orientation="vertical"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="5"

    >
    <!-- jfdjfdn-->
    
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:src="@mipmap/img_logo"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:layout_marginHorizontal="30dp"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Đăng nhập"
            android:layout_marginHorizontal="30dp"
            android:textSize="17sp"
            android:textColor="#000"
            android:layout_marginBottom="5dp"

            />
        <View
            android:layout_width="150dp"
            android:layout_height="5dp"
            android:background="#FF00"

            />
            >

        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:text="XIN CHÀ0"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="25dp"
            android:text="Đăng nhập bằng số điện thoại"
            android:textStyle="bold"

            />
        <EditText
            android:padding="20dp"
            android:hint="Số điện thoại"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/gray_round_background"
            android:layout_marginHorizontal="30dp"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:drawableRight="@mipmap/ic_next"
            android:textSize="25sp"
            android:textColor="#fff"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="ĐĂNG NHẬP"
             android:background="@drawable/red_round_background"
            android:layout_marginHorizontal="30dp"
            />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="90dp"
            android:text="Hình thức đăng nhâp khác"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@mipmap/ic_fb" />
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"

                android:src="@mipmap/ic_gg" />


    </LinearLayout>



    </LinearLayout>



</LinearLayout>

